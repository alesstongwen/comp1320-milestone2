<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.2.0/css/all.css"
    />
    <link rel="stylesheet" href="/src/global.css" />
  </head>

  <body>
    <header>
      <div class="container">
        <div
          style="
            margin-bottom: 2px;
            border: 1px solid #ccc;
            border-radius: 10px;
            overflow: hidden;
          "
        ></div>
        <div style="background-color: white">
          <a href="/">
            <img
              src="https://cdn4.iconfinder.com/data/icons/picons-social/57/38-instagram-2-512.png"
              width="50"
              style="padding-left: 5px"
            />
          </a>
        </div>
        <div class="profile">
          <div class="profile-image">
            <img
              src="/src/photos/<%= userInfo.username %>/profile.jpeg"
              alt="<%= userInfo.username %>"
              width="200"
            />
          </div>

          <div class="profile-user-settings">
            <h1 class="profile-user-name"><%= userInfo.username %></h1>

            <button class="btn profile-edit-btn">Edit Profile</button>

            <button
              class="btn profile-settings-btn"
              aria-label="profile settings"
            >
              <i class="fas fa-cog" aria-hidden="true"></i>
            </button>
          </div>

          <div class="profile-stats">
            <ul>
              <li>
                <span class="profile-stat-count">
                  <%= userInfo.stats.posts %>
                </span>
                posts
              </li>
              <li>
                <span class="profile-stat-count">
                  <%= userInfo.stats.followers %>
                </span>
                followers
              </li>
              <li>
                <span class="profile-stat-count">
                  <%= userInfo.stats.following %>
                </span>
                following
              </li>
            </ul>
          </div>

          <div class="profile-bio">
            <p><%= userInfo.description %></p>
          </div>
        </div>
        <!-- End of profile section -->
      </div>
      <!-- End of container -->
    </header>

    <main>
      <div class="container">
        <div class="gallery">
          <% userInfo.photos.forEach(photo=> { %>
          <div class="gallery-item" tabindex="0">
            <img
              src="/src/photos/<%= userInfo.username %>/<%= photo %>"
              class="gallery-image"
              alt=""
            />

            <div class="gallery-item-info">
              <ul>
                <li class="gallery-item-likes">
                  <span class="visually-hidden">Likes:</span
                  ><i class="fas fa-heart" aria-hidden="true"></i> 56
                </li>
                <li class="gallery-item-comments">
                  <span class="visually-hidden">Comments:</span
                  ><i class="fas fa-comment" aria-hidden="true"></i> 2
                </li>
              </ul>
            </div>
          </div>
          <% }); %>
        </div>
        <!-- End of gallery -->

        <div class="loader"></div>
      </div>
      <!-- End of container -->
    </main>
  </body>
</html>
